<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.interview.weatherapp.core.UiState" />

        <import type="com.interview.weatherapp.presentation.fragment.WeatherView" />

        <variable
            name="viewModel"
            type="WeatherView" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.weather.city}"
            android:textStyle="bold"
            android:textSize="28sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Gliwice" />

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.weather.date}"
            android:textStyle="bold"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@id/city"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="28 sierpnia 2024" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:textSize="66sp"
            android:text="@{viewModel.weather.temperature}"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="28 C" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:textSize="66sp"
            android:text="@{viewModel.weather.humidity}"
            app:layout_constraintTop_toBottomOf="@id/temperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="77 %" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
